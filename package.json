{
  "name": "sotdl-chargen",
  "version": "0.3.0",
  "description": "Shadow of the Demon Lord - Character Generator",
  "main": "index.js",
  "scripts": {
    "start": "npm prune && npm install && npm run lint && npm run server",
    "build": "npm run lint && npm run webpack",
    "webpack": "./node_modules/.bin/webpack --progress --colors",
    "server": "./node_modules/.bin/webpack-dev-server --progress --colors --inline --hot --content-base public/",
    "test": "./node_modules/.bin/jest --coverage",
    "test:watch": "./node_modules/.bin/jest -o --watch",
    "lint": "./node_modules/.bin/standard \"./src/**/*.js\" \"./__tests__/**/*.js\""
  },
  "author": "Scott Maclure <scott@maclure.com.au>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-jest": "^12.0.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "css-loader": "^0.23.1",
    "jest-cli": "^12.0.2",
    "json-loader": "^0.5.4",
    "react": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "redux-devtools": "^3.2.0",
    "standard": "^7.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-loader": "^6.2.4"
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "it",
      "expect",
      "beforeEach",
      "jasmine"
    ]
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react"
    ],
    "moduleNameMapper": { "^.*[.](css|CSS)$": "src/js/EmptyModule.js" }
  }
}
